@{
    Layout = null;
}
@model TaiKhoanUser
<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../../LayoutAdmin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../LayoutAdmin/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="../../LayoutAdmin/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="../../LayoutAdmin/assets/images/favicon.ico" />
  </head>
  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
          <div class="row flex-grow">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left p-5">
                <div class="brand-logo">
                  <img src="../../LayoutAdmin/assets/images/logo.svg">
                </div>
                    <h1 class="font-weight-light">Register</h1>
                    @using (Html.BeginForm("Register", "Access", FormMethod.Post, new { id = "registerForm" }))
                    {
                        <!-- Email input -->
                        <p class="form__text-red mb-2" id="error-name" style="font-size:13px;color: red;"></p>
                        <div class="form-outline mb-4">
                            <label class="form-label" for="username">Username</label>
                            @Html.TextBoxFor(x=>x.TenTaiKhoan, new{@class="form-control form-control-lg",  @id = "username" ,required = "required", autofocus="autofocus" })
                        </div>

                        <p class="form__text-red mb-3" id="error-password" style="font-size:13px;color: red;"></p>
                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="password">Password</label>
                            @Html.TextBoxFor(x=>x.MatKhau, new{@class="form-control form-control-lg", @id = "password", type="password"})
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" for="confirmPassword">Password confirm</label>
                            <input type="password" id="confirm-pasowrd" class="form-control form-control-lg" />
                        </div>
                        <!-- Submit button -->
                        <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit">REGISTER</button>
                    }
              </div>
            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../LayoutAdmin/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../../LayoutAdmin/assets/js/off-canvas.js"></script>
    <script src="../../LayoutAdmin/assets/js/hoverable-collapse.js"></script>
    <script src="../../LayoutAdmin/assets/js/misc.js"></script>
    <!-- endinject -->
    <!-- MDB -->
    <script type="text/javascript" src="../md5/js/mdb.min.js"></script>
    <!-- Custom scripts -->
    <script type="text/javascript"></script>
    <script>
        // REGISTER

        const Validiation = () => {
            let name = document.getElementById('username').value;
            let check_error_name = document.getElementById('error-name');


            if (name == '') {
                check_error_name.innerHTML = '* Họ tên không được để trống!'
                return false;
            }

            check_error_name.innerHTML = '';

            let pass = document.getElementById('password').value;
            let check_error_pass = document.getElementById('error-password');
            let regexPass = /\ /;

            if (pass == '') {
                check_error_pass.innerHTML = '* Mật khẩu không được để trống!';
                return false;
            }
            check_error_pass.innerHTML = '';

            let confirmPass = document.getElementById('confirm-pasowrd').value;
            let check_error_cfrm_pass = document.getElementById('error-password');
            if (confirmPass !== pass) {
                check_error_cfrm_pass.innerHTML = 'Mật khẩu không trùng nhau';
                return false;
            }

            return true;

        }

        const form = document.getElementById('registerForm');

        form.onsubmit = (event) => {
            if (!Validiation()) {
                event.preventDefault();
            }
        };
    </script>
</body>
</html>

